  {
    \color{ctpText} #5
  }\newline
}



% Define the 'console' environment with a black background
\newtcolorbox{consolebox}{%
    colback=ctpBase, % Background color (adjust the percentage as needed)
    coltext=ctpText,    % Text color
    fontupper=\ttfamily\footnotesize, % Typewriter font and small size
    boxrule=0pt,      % No box rule
    arc=5pt,          % No rounded corners
    boxsep=5pt,       % Padding
    left=0pt,         % No left padding
    right=0pt,        % No right padding
    top=2pt,          % Top padding
    bottom=2pt,       % Bottom padding
}

% Define the 'console' environment
\newenvironment{console}{%
    \begin{consolebox}%
}{%
    \end{consolebox}%
}
