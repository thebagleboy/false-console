\newcommand{\gitref}[1]{{\color{ctpYellow}#1}}
\newcommand{\githead}[1]{{\color{ctpTeal}#1}}
\newcommand{\gitlog}[6]{
  {\color{ctpLavender}commit} \gitref{#1}{#6}\newline
